{
  // thanks to this helpful tutorial
  // https://stephencharlesweiss.com/node-debug-typescript-cli
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/src/index.ts",
      "sourceMaps": true,
      "preLaunchTask": "npm: debug",
      "outFiles": ["${workspaceFolder}/dist/scrapers/src/index.js", "${workspaceFolder}/dist/scrapers/src/util.js"],
      "skipFiles": ["<node_internals>/**"],
      "args": ["--usa", "--storeStart=7"]
    }
  ]
}
