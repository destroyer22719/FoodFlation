{
  // thanks to this helpful tutorial
  // https://stephencharlesweiss.com/node-debug-typescript-cli
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/dist/index.js",
      "sourceMaps": true,
      "preLaunchTask": "npm: debug",
      "outFiles": ["${workspaceFolder}/dist/**"],
      "skipFiles": ["<node_internals>/**"],
      "args": ["--usa", "--itemStart=22"]
    }
  ]
}
